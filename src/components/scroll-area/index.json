  "desc-with-translation": {
    "zh": "ScrollArea 组件能够让你自定义滚动条。"
  },
  "props": [
    {
      "prop": "width",
      "desc-with-translation": {
        "zh": "容器的宽度"
      },
      "type": "string",
      "default": "'100%'"
    },
    {
      "prop": "height",
      "desc-with-translation": {
        "zh": "容器的高度"
      },
      "type": "string",
      "default": "'100%'"
    },
    {
      "prop": "resize",
      "desc-with-translation": {
        "zh": "当内容变化时是否更新滚动条的大小"
      },
      "type": "boolean",
